@inherits LayoutComponentBase

<TelerikRootComponent>
    @Body
</TelerikRootComponent>

<style>
    .big-notification .k-notification-container .k-notification-wrap {
        width: 350px;
        height: 100px;
    }

    .big-notification {
        z-index: 1234;
    }
    .k-listview-header {
        padding: 20px 28px;
        text-transform: uppercase;
    }

    .k-card {
        padding: 20px;
        border-width: 0 0 1px 0;
        border-radius: 0;
        box-shadow: none;
    }

    .k-card:last-child {
        border-bottom: 0;
    }

    .k-card .k-card-body,
    .k-card .k-card-actions {
        padding: 0 8px;
    }

    .k-card .k-card-image {
        max-width: unset;
    }

    .k-card-horizontal > .k-card-image:last-child {
        border-radius: 0;
    }

    .k-card .k-card-title {
        padding: 0;
        font-size: 1.285em;
        font-weight: bold;
        line-height: normal;
    }

    .k-card-subtitle {
        font-size: 1em;
    }

    .card-date {
        font-size: 0.85em;
        color: #bababa;
    } 2px solid red;
    }
</style>